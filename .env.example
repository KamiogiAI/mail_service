# ===========================================
# Mail Service 環境変数テンプレート
# ===========================================
# このファイルをコピーして .env を作成してください
# cp .env.example .env

# --- データベース ---
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=mail_service
MYSQL_USER=mailuser
MYSQL_PASSWORD=mailpassword
DATABASE_URL=mysql+pymysql://mailuser:mailpassword@db:3306/mail_service?charset=utf8mb4

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- セキュリティ ---
# AES暗号化キー (32バイト hex) - APIキー暗号化用
# python -c "import secrets; print(secrets.token_hex(32))"
AES_KEY=

# JWTシークレット (セッション管理では不使用だが将来用)
JWT_SECRET=

# --- Stripe ---
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# --- Resend ---
RESEND_API_KEY=
RESEND_FROM_EMAIL=noreply@example.com
RESEND_WEBHOOK_SECRET=

# --- OpenAI ---
OPENAI_API_KEY=

# --- サービス設定 ---
SITE_URL=http://localhost:8000
SITE_NAME=Mail Service
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# --- セッション ---
SESSION_TIMEOUT_MINUTES=60

# --- スケジューラ ---
SCHEDULER_TOKEN=

# --- 環境 ---
ENV=development
DEBUG=true
